                        android:layout_height="wrap_content"
                        android:text="单词连连看"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_18"
