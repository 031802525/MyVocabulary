                android:layout_height="match_parent"
                android:text="趣味一步到位"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>
