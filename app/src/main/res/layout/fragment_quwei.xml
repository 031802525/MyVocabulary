<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc">

    <RelativeLayout
        android:id="@+id/quwei_rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/login_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/logo"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="趣味一步到位"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/quwei_rl_mainbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quwei_rl_titlebar"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="@dimen/dp_230"
                android:background="@drawable/login_edittext">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/quwei_tv_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单词连连看"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简单小游戏"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/grey"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/quwei_tv_link"
                        />



                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="@dimen/dp_230"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/quwei_tv_alarmtip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简单小提醒"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_20"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不再忘记学习"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/grey"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_below="@+id/quwei_tv_alarmtip"
                            android:layout_alignParentRight="true"
                            />

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/gameclock"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginLeft="@dimen/dp_8"

                            />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/quwei_tv_alarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专属小闹钟"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_20"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清晨的第一句英文"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/grey"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_18"
                            android:layout_below="@+id/quwei_tv_alarm"
                            android:layout_alignParentRight="true"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/clock"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"

                            />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quwei_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_10"
        android:layout_below="@+id/quwei_rl_mainbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_edittext">

                <TextView
                    android:id="@+id/quwei_tv_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="单词解锁"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quwei_tv_lock"
                    android:layout_marginLeft="@dimen/dp_38"
                    android:text="专治手痒"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/rightback" />



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>