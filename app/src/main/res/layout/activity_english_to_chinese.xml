<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    >

    <RelativeLayout
        android:id="@+id/chtoen_rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/deepblue">
            <ImageView
                android:id="@+id/back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/leftback"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="翻译"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/chtoen_rl_head"
        android:id="@+id/chtoen_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_30"
            />

        <ImageView
            android:id="@+id/fanzhuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/doublesidedarrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_30"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/chtoen_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/chtoen_rl"
        >
        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:hint="在此输入要翻译的文本"
            android:background="@drawable/login_edittext"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            />
        <ImageView
            android:id="@+id/sousuo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/chtoen_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="译文"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/yiwen2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_22"
            android:text="真是美好的一天！"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            />
    </LinearLayout>

</RelativeLayout>