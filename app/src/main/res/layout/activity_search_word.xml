<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgc"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal"
        android:background="@color/deepblue"
        >
        <ImageView
            android:id="@+id/search_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/leftback"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_10"
        >

        <EditText
            android:id="@+id/search_et_inputword"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="2"
            android:textColor="@color/grey"
            android:padding="@dimen/dp_3"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:id="@+id/search_Iv_search"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:src="@mipmap/search"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/search_tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insist"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_20"/>

        <ImageView
            android:id="@+id/search_Iv_vocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vocal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"

            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        android:layout_below="@+id/worditem"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/search_tv_mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v.坚持，坚决要求"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="例句"
        android:textColor="#2a82e4"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <ListView
            android:id="@+id/search_lv_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            />


    </RelativeLayout>
</LinearLayout>